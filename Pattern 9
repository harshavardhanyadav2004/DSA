import java.util.*;


public class Main7 {


    public static void main(String args[]){


        Scanner sc = new Scanner(System.in);
        System.out.println("Enter the number of rows");
        int n = sc.nextInt();
        for(int i=1;i<=n;i++){

            if(i==n){

                for(int j=1;j<=2*i-1;j++){

                    System.out.print("* ");
                }
            }
            else {

                for(int k=1;k<=n-1;k++){
                    System.out.print("  ");
                }

                for(int j=1;j<=i;j++){

                    System.out.print("* ");
                }
            }
            System.out.println();



        }

        for(int i=n-1;i>=1;i--){

            for(int j=1;j<=n-1;j++)
            {
                System.out.print("  ");

            }


            for(int k=1;k<=i;k++){


                System.out.print("* ");
            }

            System.out.println();
        }
    }

}
